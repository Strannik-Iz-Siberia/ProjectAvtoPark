<Page x:Class="ProjectAvtoPark.Forms.Pages.Print"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectAvtoPark.Forms.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Print" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="377*"/>

        </Grid.RowDefinitions>
        <DataGrid x:Name="Otchet" Grid.Row="0" AutoGenerateColumns="False" Background ="Transparent" 
               GridLinesVisibility="None" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" 
               SelectionMode="Single" FontSize="17" SelectionUnit="FullRow" Style="{DynamicResource GridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="N:" Width="*" Binding="{Binding Номер }" />
                <DataGridTextColumn Header="Автомобиль" Width="*" Binding="{Binding Автомобиль }" />
                <DataGridTextColumn Header="Цена" Width="*" Binding="{Binding Итоговая_цена  }" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
